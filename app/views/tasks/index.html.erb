<div class="d-flex flex-column align-items-center justify-content-center vh-100">
  <h1 class="text-center mt-9">Tarefas pendentes</h1>
  <div id="tarefas" class="m-2 d-flex flex-column">
    <% @tasks.each do |task| %>
      <div class="task-box border p-2 m-2 shadow rounded" style="height: 50px;">
        <%= check_box_tag "resolvida", task.id, task.resolvida, 
          class: "form-check-input me-2", 
          data: { action: "change->tasks#toggleResolve" } %>
        <%= task.nome %>
      </div>
    <% end %>
    <div class="">
      <%= link_to "Nova tarefa", new_task_path, class: "btn btn-primary mt-3" %>
    </div>
    <div class="m-1">
      <%#= link_to "Tarefas concluÃ­das", check_tasks_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
</div>
